<div class="flex h-screen bg-gray-50 overflow-hidden print:h-auto print:overflow-visible print:block">
    {# Default / Fallback Theme #}
    {% set theme = {
        'sidebar_bg': 'bg-slate-900',
        'border_color': 'border-slate-800',
        'text_base': 'text-slate-300',
        'text_hover': 'group-hover:text-white',
        'item_hover_bg': 'hover:bg-white/10',
        'active_bg': 'bg-indigo-600',
        'active_text': 'text-white',
        'active_icon': 'text-white',
        'brand_accent': 'bg-indigo-500',
        'profile_border': 'border-slate-700',
        'profile_hover': 'hover:bg-slate-800',
        'profile_text_main': 'text-white',
        'profile_text_sub': 'text-slate-400',
        'brand_text': 'text-white'
    } %}
    
    {# --- ADMIN THEME: #cd3937 (Red/Burgundy) --- #}
    {% if is_granted('ROLE_ADMIN') %}
        {% set theme = {
            'sidebar_bg': 'bg-[#cd3937]',
            'border_color': 'border-white/10',
            'text_base': 'text-white/90',
            'text_hover': 'group-hover:text-white',
            'item_hover_bg': 'hover:bg-black/10',
            'active_bg': 'bg-white/20',
            'active_text': 'text-white',
            'active_icon': 'text-white',
            'brand_accent': 'bg-white',
            'profile_border': 'border-white/10',
            'profile_hover': 'hover:bg-black/10',
            'profile_text_main': 'text-white',
            'profile_text_sub': 'text-white/70',
            'brand_text': 'text-white'
        } %}

    {# --- TEACHER THEME: #f9bd00 (Gold/Yellow) --- #}
    {% elseif is_granted('ROLE_TEACHER') %}
        {% set theme = {
            'sidebar_bg': 'bg-[#f9bd00]',
            'border_color': 'border-black/10',
            'text_base': 'text-slate-900',
            'text_hover': 'group-hover:text-black',
            'item_hover_bg': 'hover:bg-black/5',
            'active_bg': 'bg-black/10',
            'active_text': 'text-black font-bold',
            'active_icon': 'text-black',
            'brand_accent': 'bg-black',
            'profile_border': 'border-black/10',
            'profile_hover': 'hover:bg-black/5',
            'profile_text_main': 'text-black',
            'profile_text_sub': 'text-slate-800',
            'brand_text': 'text-black'
        } %}

    {# --- STUDENT THEME: #185d26 (Dark Green) --- #}
    {% elseif is_granted('ROLE_STUDENT') %}
        {% set theme = {
            'sidebar_bg': 'bg-[#185d26]',
            'border_color': 'border-white/10',
            'text_base': 'text-white/90',
            'text_hover': 'group-hover:text-white',
            'item_hover_bg': 'hover:bg-white/10',
            'active_bg': 'bg-white/20',
            'active_text': 'text-white',
            'active_icon': 'text-white',
            'brand_accent': 'bg-white',
            'profile_border': 'border-white/10',
            'profile_hover': 'hover:bg-black/10',
            'profile_text_main': 'text-white',
            'profile_text_sub': 'text-white/70',
            'brand_text': 'text-white'
        } %}
    {% endif %}

<aside class="w-60 {{ theme.sidebar_bg }} border-r {{ theme.border_color }} flex-shrink-0 hidden md:flex flex-col transition-all duration-300 shadow-xl print:hidden">
        
        <div class="h-24 flex items-center justify-center px-4 border-b {{ theme.border_color }} overflow-hidden relative">
            {% set dashboard_route = 'app_login' %}
            {% if is_granted('ROLE_ADMIN') %}
                {% set dashboard_route = 'app_admin_dashboard' %}
            {% elseif is_granted('ROLE_TEACHER') %}
                {% set dashboard_route = 'app_teacher_dashboard' %}
            {% elseif is_granted('ROLE_STUDENT') %}
                {% set dashboard_route = 'app_student_dashboard' %}
            {% endif %}

            <a href="{{ path(dashboard_route) }}" class="block text-center focus:outline-none">
                <img 
                    src="{{ asset('logo-po.png') }}" 
                    alt="GradeFlow" 
                    class="h-20 w-auto object-contain drop-shadow-md transition transform hover:scale-105"
                >
            </a>
        </div>

        <nav class="flex-1 px-3 py-6 space-y-1 overflow-y-auto custom-scrollbar">{% set route = app.request.get('_route') %}
            
            {# --- ADMIN MENU --- #}
            {% if is_granted('ROLE_ADMIN') %}
                <div class="mb-6">
                    <p class="px-3 text-xs font-bold {{ is_granted('ROLE_TEACHER') ? 'text-black/50' : 'text-white/50' }} uppercase tracking-wider mb-3">Gestion</p>
                    
                    <a href="{{ path('app_admin_dashboard') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route == 'app_admin_dashboard' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                        <svg class="mr-3 h-5 w-5 {{ route == 'app_admin_dashboard' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                           <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                        </svg>
                        Tableau de Bord
                    </a>
                    
                    <a href="{{ path('app_admin_users') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route starts with 'app_admin_user' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                         <svg class="mr-3 h-5 w-5 {{ route starts with 'app_admin_user' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                           <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                        </svg>
                        Utilisateurs
                    </a>

                    <a href="{{ path('app_admin_classes') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route starts with 'app_admin_classe' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                        <svg class="mr-3 h-5 w-5 {{ route starts with 'app_admin_classe' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                           <path fill-rule="evenodd" d="M10.496 2.132a1 1 0 00-.992 0l-7 4A1 1 0 003 8v7a1 1 0 100 2h14a1 1 0 100-2V8a1 1 0 00.496-1.868l-7-4zM6 9a1 1 0 00-1 1v3a1 1 0 102 0v-3a1 1 0 00-1-1zm3 1a1 1 0 012 0v3a1 1 0 11-2 0v-3zm5-1a1 1 0 00-1 1v3a1 1 0 102 0v-3a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                        Classes
                    </a>

                    <a href="{{ path('app_admin_modules') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route starts with 'app_admin_module' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                        <svg class="mr-3 h-5 w-5 {{ route starts with 'app_admin_module' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                           <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                        </svg>
                        Modules
                    </a>
                </div>

                <div>
                     <p class="px-3 text-xs font-bold {{ is_granted('ROLE_TEACHER') ? 'text-black/50' : 'text-white/50' }} uppercase tracking-wider mb-3">Configuration</p>
                    
                    <a href="{{ path('app_admin_assignments') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route starts with 'app_admin_assignment' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                         <svg class="mr-3 h-5 w-5 {{ route starts with 'app_admin_assignment' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                           <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                           <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
                        </svg>
                        Affectations
                    </a>

                    <a href="{{ path('app_admin_filieres') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route starts with 'app_admin_filiere' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                        <svg class="mr-3 h-5 w-5 {{ route starts with 'app_admin_filiere' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                           <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
                        </svg>
                        Filières
                    </a>

                    <a href="{{ path('app_admin_system') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route == 'app_admin_system' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                         <svg class="mr-3 h-5 w-5 {{ route == 'app_admin_system' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                           <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                        </svg>
                        Système
                    </a>
                </div>

            {# --- STUDENT MENU (UPDATED TO SOLID) --- #}
            {% elseif is_granted('ROLE_STUDENT') %}
                 <a href="{{ path('app_student_dashboard') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route == 'app_student_dashboard' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                    <svg class="mr-3 h-5 w-5 {{ route == 'app_student_dashboard' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                    </svg>
                    Tableau de Bord
                </a>
                
                <a href="{{ path('app_student_grades') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route == 'app_student_grades' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                   <svg class="mr-3 h-5 w-5 {{ route == 'app_student_grades' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                       <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                    </svg>
                   Mes Notes
                </a>

            {# --- TEACHER MENU (UPDATED TO SOLID) --- #}
            {% elseif is_granted('ROLE_TEACHER') %}
                 <a href="{{ path('app_teacher_dashboard') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route == 'app_teacher_dashboard' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                     <svg class="mr-3 h-5 w-5 {{ route == 'app_teacher_dashboard' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                    </svg>
                    Tableau de Bord
                </a>
                 <a href="{{ path('app_teacher_classes') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route == 'app_teacher_classes' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                     <svg class="mr-3 h-5 w-5 {{ route == 'app_teacher_classes' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.496 2.132a1 1 0 00-.992 0l-7 4A1 1 0 003 8v7a1 1 0 100 2h14a1 1 0 100-2V8a1 1 0 00.496-1.868l-7-4zM6 9a1 1 0 00-1 1v3a1 1 0 102 0v-3a1 1 0 00-1-1zm3 1a1 1 0 012 0v3a1 1 0 11-2 0v-3zm5-1a1 1 0 00-1 1v3a1 1 0 102 0v-3a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                   Mes Classes
                </a>
                <a href="{{ path('app_teacher_grading') }}" class="flex items-center px-3 py-2.5 text-sm font-medium rounded-lg mb-1 {{ route == 'app_teacher_grading' ? theme.active_bg ~ ' ' ~ theme.active_text : theme.text_base ~ ' ' ~ theme.item_hover_bg ~ ' ' ~ theme.text_hover }} group transition-all">
                     <svg class="mr-3 h-5 w-5 {{ route == 'app_teacher_grading' ? theme.active_icon : theme.text_base ~ ' ' ~ theme.text_hover }}" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                   Saisie des Notes
                </a>
            {% endif %}

        </nav>

        <div class="border-t {{ theme.profile_border }} p-4 bg-black/5">
            <a href="{{ path('app_profile') }}" class="flex items-center w-full {{ theme.profile_hover }} p-2 rounded-lg transition mb-3 border border-transparent group">
                <div class="h-10 w-10 rounded-full {{ theme.brand_accent }} flex items-center justify-center {{ is_granted('ROLE_TEACHER') ? 'text-white' : 'text-slate-900' }} font-bold shadow-md">
                    {{ app.user.firstName|first|upper }}{{ app.user.lastName|first|upper }}
                </div>
                <div class="ml-3 overflow-hidden">
                    <p class="text-sm font-bold {{ theme.profile_text_main }} truncate">{{ app.user.firstName }}</p>
                    <p class="text-xs {{ theme.profile_text_sub }} truncate">Voir mon profil</p>
                </div>
            </a>
            
            <a href="{{ path('app_logout') }}" class="flex items-center justify-center px-4 py-2.5 text-sm font-bold rounded-lg bg-red-600 text-white hover:bg-red-700 hover:shadow-lg transition-all w-full shadow-md border border-red-700/20">
                <svg class="mr-2 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd" />
                </svg>
                Déconnexion
            </a>
        </div>
    </aside>

    <div class="flex-1 flex flex-col min-w-0 overflow-y-auto scroll-smooth print:overflow-visible print:h-auto print:block">
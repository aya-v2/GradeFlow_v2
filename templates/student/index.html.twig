{% extends 'base.html.twig' %}

{% block title %}Mon Espace Étudiant{% endblock %}

{% block body %}
    {% include 'components/sidebar.html.twig' %}

    <div class="min-h-screen bg-gray-50 py-8 px-4">
        <div class="max-w-7xl mx-auto">
            <div class="mb-8 flex justify-between items-end">
                <div>
                    <h2 class="text-3xl font-bold text-gray-900">Bonjour, {{ app.user.firstName }}</h2>
                    <p class="text-gray-500 mt-1">Espace Étudiant • {{ classe }}</p>
                </div>
                <div class="text-right">
                    <p class="text-sm font-medium text-gray-900">{{ "now"|date('d F Y') }}</p>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Left Column: Calendar & Stats -->
                <div class="space-y-6">
                     <!-- Calendar Widget -->
                    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
                        <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-4">Calendrier</h3>
                        <div class="grid grid-cols-7 gap-2 text-center mb-4">
                            <div class="text-[10px] font-bold text-slate-400 uppercase">L</div>
                            <div class="text-[10px] font-bold text-slate-400 uppercase">M</div>
                            <div class="text-[10px] font-bold text-slate-400 uppercase">M</div>
                            <div class="text-[10px] font-bold text-slate-400 uppercase">J</div>
                            <div class="text-[10px] font-bold text-slate-400 uppercase">V</div>
                            <div class="text-[10px] font-bold text-slate-400 uppercase">S</div>
                            <div class="text-[10px] font-bold text-slate-400 uppercase">D</div>
                        </div>
                        <div class="grid grid-cols-7 gap-2 text-center" id="calendar"></div>
                    </div>

                    <!-- Recent Grades Widget -->
                     <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                        <div class="px-6 py-4 border-b border-slate-50 bg-slate-50 flex items-center gap-2">
                             <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
                             <h3 class="font-bold text-gray-800 text-sm">Dernières Notes</h3>
                        </div>
                        <div class="p-4">
                            {% if recentActivities is not empty %}
                                <ul class="space-y-4">
                                    {% for act in recentActivities[:3] %}
                                        <li class="flex items-center justify-between">
                                            <div>
                                                <div class="font-semibold text-gray-900 text-sm">{{ act.module }}</div>
                                                <div class="text-xs text-gray-500 mt-0.5">Note Ajoutée</div>
                                            </div>
                                            <div class="text-right">
                                                <span class="block font-bold text-gray-900">{{ act.grade }}</span>
                                                {% if act.type == 'cc' %}
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-medium bg-blue-100 text-blue-800">
                                                        CC
                                                    </span>
                                                {% elseif act.type == 'exam' %}
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-medium bg-purple-100 text-purple-800">
                                                        Exam
                                                    </span>
                                                {% endif %}
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <div class="text-center py-4 text-gray-400 text-sm">Aucune note récente.</div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Right Column: Modules List -->
                <div class="lg:col-span-2">
                    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                        <div class="px-6 py-5 border-b border-slate-100 flex justify-between items-center">
                            <h3 class="font-bold text-gray-900">Modules du Semestre</h3>
                            <a href="{{ path('app_student_grades') }}" class="text-sm text-indigo-600 hover:text-indigo-800 font-medium">Voir tout &rarr;</a>
                        </div>
                        <div class="divide-y divide-slate-50">
                            {% if currentAssignments is not empty %}
                                {% for a in currentAssignments %}
                                    <div class="p-4 hover:bg-slate-50 transition flex items-center justify-between group">
                                        <div class="flex items-center gap-4">
                                            <div class="h-10 w-10 rounded-lg bg-slate-100 text-slate-500 flex items-center justify-center font-bold text-xs">
                                                {{ a.module|slice(0,2)|upper }}
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-900 text-sm">{{ a.module }}</h4>
                                                <p class="text-xs text-gray-500">Prof. {{ a.teacher }}</p>
                                            </div>
                                        </div>
                                        <!-- Placeholder for maybe a "Current Average" if we had it, or status -->
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div class="p-8 text-center text-gray-500 text-sm">Aucun module trouvé.</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        const $calendar = $('#calendar');
        const today = new Date();
        const year = today.getFullYear();
        const month = today.getMonth();
        const date = today.getDate();
        
        const firstDay = new Date(year, month, 1).getDay();
        const daysInMonth = new Date(year, month + 1, 0).getDate();
        
        // Empty cells before month starts
        // Adjust logic: JS getDay() returns 0 for Sunday. If Sunday (0), we need 6 empty cells (Mon-Sat).
        // If Monday (1), we need 0 empty cells.
        // If Tuesday (2), we need 1 empty cell.
        // Formula: (day + 6) % 7
        // Monday (1) -> 7 % 7 = 0
        // Sunday (0) -> 6 % 7 = 6
        const emptyCells = (firstDay + 6) % 7;

        for (let i = 0; i < emptyCells; i++) {
            $calendar.append('<div></div>');
        }
        
        // Days of month
        for (let d = 1; d <= daysInMonth; d++) {
            const isToday = (d === date);
            const classes = isToday 
                ? 'bg-indigo-600 text-white' 
                : 'text-slate-700 hover:bg-slate-100';
            
            const $day = $('<div>', {
                class: `w-8 h-8 flex items-center justify-center rounded-lg text-xs font-medium ${classes}`,
                text: d
            });
            
            $calendar.append($day);
        }
    });
</script>

        </div>
    </div>

    {% include 'components/sidebar_close.html.twig' %}
{% endblock %}
{% extends "base.html.twig" %}

{% block title %}Mes Classes{% endblock %}

{% block body %}
    {% include 'components/sidebar.html.twig' %}

    <main class="min-h-screen p-8 bg-white">
        <div class="max-w-6xl mx-auto">
            <header class="mb-8">
                <h1 class="text-4xl font-bold text-gray-900">Mes Classes</h1>
                <p class="text-gray-500 text-sm mt-2">Sélectionnez une classe pour voir les étudiants</p>
            </header>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for assignment in assignments %}
                <a href="{{ path('app_teacher_students', { id: assignment.associatedClass.id }) }}" 
                    class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 hover:shadow-lg hover:border-indigo-200 transition">
                    <div class="flex items-start justify-between mb-4">
                        <div>
                            <h3 class="text-lg font-bold text-gray-900">{{ assignment.associatedClass.name }}</h3>
                            <p class="text-sm text-gray-600 mt-1">{{ assignment.associatedClass.filiere.name }}</p>
                        </div>
                        <span class="inline-block px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full text-xs font-bold">
                            L{{ assignment.associatedClass.level }}
                        </span>
                    </div>
                    
                    <div class="pt-4 border-t border-slate-100 text-sm text-gray-600">
                        <p class="mb-2"><strong>Modules:</strong></p>
                        <p class="text-indigo-600">{{ assignment.module.name }}</p>
                    </div>
                    
                    <div class="mt-4 text-indigo-600 font-medium text-sm flex items-center gap-1">
                        Voir les étudiants
                        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </div>
                </a>
                {% endfor %}
            </div>

            {% if assignments is empty %}
            <div class="text-center py-12">
                <p class="text-gray-500 text-lg">Aucune classe assignée pour cette année</p>
            </div>
            {% endif %}
        </div>
    </main>

    {% include 'components/sidebar_close.html.twig' %}
{% endblock %}

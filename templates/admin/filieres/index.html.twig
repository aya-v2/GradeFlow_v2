{% extends "base.html.twig" %}

{% block title %}Gestion des Filières{% endblock %}

{% block body %}
    {% include 'components/sidebar.html.twig' %}

    <main class="min-h-screen p-8 bg-white">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-center justify-between mb-8">
                <h1 class="text-4xl font-bold text-gray-900">Gestion des Filières</h1>
                <a href="{{ path('app_admin_filiere_new') }}" class="inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition font-bold">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Nouvelle Filière
                </a>
            </div>

            {% if filieres is empty %}
                <div class="bg-slate-50 border border-slate-200 rounded-2xl px-6 py-8 text-center">
                    <p class="text-slate-600 font-medium">Aucune filière</p>
                    <a href="{{ path('app_admin_filiere_new') }}" class="inline-block mt-4 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition font-medium text-sm">
                        Créer la première filière
                    </a>
                </div>
            {% else %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for filiere in filieres %}
                    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
                        <h3 class="text-lg font-bold text-gray-900">{{ filiere.name }}</h3>
                        <p class="text-sm text-gray-500 mt-2">{{ filiere.code }}</p>
                        
                        <div class="mt-6 flex gap-2 justify-end">
                            <a href="{{ path('app_admin_filiere_edit', { id: filiere.id }) }}" class="p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition" title="Éditer">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </main>

    {% include 'components/sidebar_close.html.twig' %}
{% endblock %}

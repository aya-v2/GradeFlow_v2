{% extends "base.html.twig" %}

{% block title %}{% if edit %}Éditer{% else %}Créer{% endif %} Utilisateur{% endblock %}

{% block body %}
    {% include 'components/sidebar.html.twig' %}

    <main class="min-h-screen p-8 bg-white">
        <div class="max-w-2xl mx-auto">
            <a href="{{ path('app_admin_users') }}" class="text-indigo-600 hover:text-indigo-700 font-medium text-sm mb-6 inline-flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Retour aux utilisateurs
            </a>

            <header class="mb-8">
                <h1 class="text-4xl font-bold text-gray-900">{% if edit %}Éditer Utilisateur{% else %}Créer Utilisateur{% endif %}</h1>
                <p class="text-gray-500 text-sm mt-2">{% if edit %}Modifiez les informations de l'utilisateur{% else %}Ajoutez un nouveau utilisateur au système{% endif %}</p>
            </header>

            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-8">
                <form method="post" class="space-y-6">
                    <!-- First Name -->
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Prénom *</label>
                        <input type="text" name="firstName" value="{{ user ? user.firstName : '' }}" required
                               class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    </div>

                    <!-- Last Name -->
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Nom *</label>
                        <input type="text" name="lastName" value="{{ user ? user.lastName : '' }}" required
                               class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    </div>

                    <!-- Email -->
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Email *</label>
                        <input type="email" name="email" value="{{ user ? user.email : '' }}" required
                               class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    </div>

                    <!-- Password -->
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Mot de passe {% if not edit %}*{% endif %}</label>
                        <input type="password" name="password" {% if not edit %}required{% endif %}
                               class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                               placeholder="{% if edit %}Laisser vide pour ne pas changer{% else %}Entrez un mot de passe sécurisé{% endif %}">
                    </div>

                    <!-- Role -->
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Rôle *</label>
                        <select name="role" required {% if edit %}disabled class="w-full px-4 py-2 border border-slate-200 bg-slate-100 text-gray-500 rounded-lg cursor-not-allowed"{% else %}class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"{% endif %}>
                            <option value="">-- Sélectionnez un rôle --</option>
                            <option value="ROLE_STUDENT" {% if user and 'ROLE_STUDENT' in user.roles %}selected{% endif %}>Étudiant</option>
                            <option value="ROLE_TEACHER" {% if user and 'ROLE_TEACHER' in user.roles %}selected{% endif %}>Enseignant</option>
                            <option value="ROLE_ADMIN" {% if user and 'ROLE_ADMIN' in user.roles %}selected{% endif %}>Administrateur</option>
                        </select>
                        {% if edit %}
                            <!-- Hidden input to keep the role value when disabled select is not submitted -->
                             {% if 'ROLE_STUDENT' in user.roles %}
                                <input type="hidden" name="role" value="ROLE_STUDENT">
                            {% elseif 'ROLE_TEACHER' in user.roles %}
                                <input type="hidden" name="role" value="ROLE_TEACHER">
                            {% elseif 'ROLE_ADMIN' in user.roles %}
                                <input type="hidden" name="role" value="ROLE_ADMIN">
                            {% endif %}
                        {% endif %}
                    </div>

                    <!-- Class (for students) -->
                    <div id="class-field" class="{% if not (user and 'ROLE_STUDENT' in user.roles) %}hidden{% endif %}">
                        <label class="block text-sm font-bold text-gray-900 mb-2">Classe</label>
                        <select name="classe" class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            <option value="">-- Aucune classe --</option>
                            {% for class in classes %}
                                <option value="{{ class.id }}" {% if user and user.classe and user.classe.id == class.id %}selected{% endif %}>{{ class.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <!-- Specialization (for teachers) -->
                    <div id="specialization-field" class="{% if not (user and 'ROLE_TEACHER' in user.roles) %}hidden{% endif %}">
                        <label class="block text-sm font-bold text-gray-900 mb-2">Spécialité (Filière)</label>
                        <select name="specialty" class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                             <option value="">-- Sélectionnez une spécialité --</option>
                            {% for filiere in filieres %}
                                <option value="{{ filiere.code }}" {% if user and user.specialty == filiere.code %}selected{% endif %}>{{ filiere.code }} - {{ filiere.name }}</option>
                            {% endfor %}
                        </select>
                        <p class="text-xs text-gray-500 mt-1">Sélectionnez la filière correspondant à la spécialité de l'enseignant.</p>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex gap-4 pt-6 border-t border-slate-100">
                        <button type="submit" class="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition font-bold">
                            {% if edit %}Enregistrer Modifications{% else %}Créer Utilisateur{% endif %}
                        </button>
                        <a href="{{ path('app_admin_users') }}" class="px-6 py-3 border border-slate-200 rounded-lg hover:bg-slate-50 transition font-medium">
                            Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    {% include 'components/sidebar_close.html.twig' %}

    <script>
        const roleSelect = document.querySelector('select[name="role"]');
        const classField = document.getElementById('class-field');
        const specializationField = document.getElementById('specialization-field');

        function toggleFieldsByRole() {
            const role = roleSelect.value;
            classField.classList.toggle('hidden', role !== 'ROLE_STUDENT');
            specializationField.classList.toggle('hidden', role !== 'ROLE_TEACHER');
        }

        roleSelect.addEventListener('change', toggleFieldsByRole);
        toggleFieldsByRole(); // Initial toggle on page load
    </script>
{% endblock %}

{% extends "base.html.twig" %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    {# --- SIDEBAR INCLUSION --- #}
    {% include 'components/sidebar.html.twig' %}

    <main class="min-h-screen p-8 bg-slate-50">
        <div class="max-w-7xl mx-auto">
            
            {# --- PAGE HEADER --- #}
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-slate-900">Gestion des Utilisateurs</h1>
                    <p class="text-slate-500 mt-1">Gérez les comptes, les rôles et les accès de la plateforme.</p>
                </div>
                <a href="{{ path('app_admin_user_new') }}" class="inline-flex items-center gap-2 px-5 py-2.5 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors shadow-sm font-semibold text-sm">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Nouvel Utilisateur
                </a>
            </div>

            {# --- FILTERS SECTION --- #}
            <div class="bg-white p-5 rounded-xl shadow-sm border border-slate-200 mb-6">
                <form method="get" class="flex flex-col sm:flex-row items-end gap-4">
                    <div class="w-full sm:flex-1">
                        <label class="block text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Recherche</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-4 w-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </div>
                            <input type="text" name="search" value="{{ current_filters.search }}" placeholder="Rechercher par nom, email..." class="block w-full pl-9 rounded-lg border-slate-300 bg-slate-50 focus:bg-white focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 shadow-sm transition-colors">
                        </div>
                    </div>

                    <div class="w-full sm:w-auto">
                        <label class="block text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Filtrer par Rôle</label>
                        <div class="flex bg-slate-100 p-1 rounded-lg">
                            <a href="{{ path('app_admin_users', {'role': 'all'}) }}" class="flex-1 sm:flex-none text-center px-4 py-1.5 rounded-md text-sm font-medium transition-all {{ current_filters.role == 'all' ? 'bg-white shadow text-indigo-600' : 'text-slate-600 hover:text-slate-900 hover:bg-slate-200/50' }}">Tous</a>
                            <a href="{{ path('app_admin_users', {'role': 'student'}) }}" class="flex-1 sm:flex-none text-center px-4 py-1.5 rounded-md text-sm font-medium transition-all {{ current_filters.role == 'student' ? 'bg-white shadow text-indigo-600' : 'text-slate-600 hover:text-slate-900 hover:bg-slate-200/50' }}">Étudiants</a>
                            <a href="{{ path('app_admin_users', {'role': 'teacher'}) }}" class="flex-1 sm:flex-none text-center px-4 py-1.5 rounded-md text-sm font-medium transition-all {{ current_filters.role == 'teacher' ? 'bg-white shadow text-indigo-600' : 'text-slate-600 hover:text-slate-900 hover:bg-slate-200/50' }}">Profs</a>
                            <a href="{{ path('app_admin_users', {'role': 'admin'}) }}" class="flex-1 sm:flex-none text-center px-4 py-1.5 rounded-md text-sm font-medium transition-all {{ current_filters.role == 'admin' ? 'bg-white shadow text-indigo-600' : 'text-slate-600 hover:text-slate-900 hover:bg-slate-200/50' }}">Admins</a>
                        </div>
                        <input type="hidden" name="role" value="{{ current_filters.role }}">
                    </div>

                    <div class="flex gap-2 w-full sm:w-auto">
                        <button type="submit" class="px-5 py-2.5 bg-indigo-600 text-white text-sm font-bold rounded-lg hover:bg-indigo-700 transition shadow-sm w-full sm:w-auto">
                            Filtrer
                        </button>
                        <a href="{{ path('app_admin_users') }}" class="px-5 py-2.5 bg-white border border-slate-300 text-slate-700 text-sm font-bold rounded-lg hover:bg-slate-50 transition w-full sm:w-auto text-center">
                            Reset
                        </a>
                    </div>
                </form>
            </div>

            {# --- USERS TABLE (REFACTORED) --- #}
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden mb-6">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-slate-200">
                        <thead class="bg-slate-50">
                            <tr>
                                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider w-[40%]">
                                    Identité & Contact
                                </th>
                                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider w-[40%]">
                                    Rôle & Statut
                                </th>
                                <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-slate-500 uppercase tracking-wider w-[20%]">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-slate-200">
                            {% for user in users %}
                            <tr class="hover:bg-slate-50 transition-colors duration-200 group">
                                
                                {# --- COL 1: User & Email --- #}
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-11 w-11">
                                            <div class="h-11 w-11 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-700 font-bold border border-indigo-200 text-sm">
                                                {{ user.firstName|first|upper }}{{ user.lastName|first|upper }}
                                            </div>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-bold text-slate-900 group-hover:text-indigo-600 transition-colors">
                                                {{ user.lastName|upper }} {{ user.firstName }}
                                            </div>
                                            <div class="text-sm text-slate-500 flex items-center gap-2">
                                                {{ user.email }}
                                                <span class="text-slate-300">|</span>
                                                <span class="text-xs text-slate-400 font-mono">ID: {{ user.id }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                {# --- COL 2: Role Details --- #}
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex flex-col items-start gap-1.5">
                                        {% if 'ROLE_ADMIN' in user.roles %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-red-100 text-red-800 border border-red-200">
                                                Administrateur
                                            </span>
                                        {% elseif 'ROLE_TEACHER' in user.roles %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-amber-100 text-amber-800 border border-amber-200">
                                                Enseignant
                                            </span>
                                            {% if user.specialty %}
                                                <span class="text-xs text-slate-500 flex items-center gap-1.5 font-medium">
                                                    <svg class="w-3.5 h-3.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                                                    {{ user.specialty }}
                                                </span>
                                            {% endif %}
                                        {% elseif 'ROLE_STUDENT' in user.roles %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-green-100 text-green-800 border border-green-200">
                                                Étudiant
                                            </span>
                                            {% if user.classe %}
                                                <span class="text-xs text-slate-500 flex items-center gap-1.5 font-medium">
                                                    <svg class="w-3.5 h-3.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                                                    {{ user.classe.name }}
                                                </span>
                                            {% else %}
                                                <span class="text-xs text-red-500 italic font-medium flex items-center gap-1">
                                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                                    Sans Classe
                                                </span>
                                            {% endif %}
                                        {% else %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-slate-100 text-slate-800 border border-slate-200">
                                                Utilisateur
                                            </span>
                                        {% endif %}
                                    </div>
                                </td>

                                {# --- COL 3: Actions --- #}
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end gap-2">
                                        
                                        <a href="{{ path('app_admin_user_show', {id: user.id}) }}" 
                                           class="p-2 text-slate-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all" 
                                           title="Voir les détails">
                                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                        </a>

                                        <a href="{{ path('app_admin_user_edit', { id: user.id }) }}" 
                                           class="p-2 text-slate-400 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-all" 
                                           title="Modifier">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </a>

                                        <form method="post" action="{{ path('app_admin_user_delete', { id: user.id }) }}" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" 
                                              class="inline-block">
                                              
                                            {# IMPORTANT: CSRF Token for security #}
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            
                                            <button type="submit" 
                                                    class="p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" 
                                                    title="Supprimer">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="3" class="px-6 py-16 text-center text-slate-500">
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="h-12 w-12 bg-slate-100 rounded-full flex items-center justify-center mb-3">
                                            <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                                        </div>
                                        <p class="text-lg font-semibold text-slate-700">Aucun utilisateur trouvé</p>
                                        <p class="text-sm text-slate-400 max-w-xs mx-auto mt-1">Essayez de modifier vos termes de recherche ou de changer les filtres.</p>
                                        <a href="{{ path('app_admin_users') }}" class="mt-4 text-indigo-600 hover:text-indigo-800 text-sm font-medium hover:underline">Effacer les filtres</a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            {# --- PAGINATION --- #}
            {% if current_filters.pages_count > 1 %}
            <div class="flex items-center justify-between border-t border-slate-200 pt-6">
                <div class="text-sm text-slate-500">
                    Affichage de la page <span class="font-bold text-slate-900">{{ current_filters.page }}</span> sur <span class="font-bold text-slate-900">{{ current_filters.pages_count }}</span>
                </div>
                <div class="flex gap-2">
                    {% if current_filters.page > 1 %}
                        <a href="{{ path('app_admin_users', current_filters|merge({'page': current_filters.page - 1})) }}" class="px-4 py-2 bg-white border border-slate-300 rounded-lg text-sm font-bold text-slate-700 hover:bg-slate-50 hover:text-indigo-600 transition shadow-sm">
                            ← Précédent
                        </a>
                    {% endif %}
                    
                    {% if current_filters.page < current_filters.pages_count %}
                         <a href="{{ path('app_admin_users', current_filters|merge({'page': current_filters.page + 1})) }}" class="px-4 py-2 bg-white border border-slate-300 rounded-lg text-sm font-bold text-slate-700 hover:bg-slate-50 hover:text-indigo-600 transition shadow-sm">
                            Suivant →
                        </a>
                    {% endif %}
                </div>
            </div>
            {% endif %}

        </div>
    </main>

    {% include 'components/sidebar_close.html.twig' %}
{% endblock %}
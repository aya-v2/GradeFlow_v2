{% extends "base.html.twig" %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    {# 1. The sidebar file opens the main layout wrappers #}
    {% include 'components/sidebar.html.twig' %}

    {# 2. MAIN CONTENT: We start directly with <main> because sidebar.html.twig already handled the containers #}
    <main class="flex-1 overflow-y-auto focus:outline-none p-8">
        <div class="max-w-5xl mx-auto">
            
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Mon Profil</h1>
                <p class="text-gray-500 mt-2">Gérez vos informations personnelles et paramètres de sécurité.</p>
            </div>

            <div class="grid grid-cols-1 gap-8">
                
                <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                    <div class="px-6 py-5 bg-slate-50 border-b border-slate-100 flex items-center gap-3">
                        <div class="p-2 bg-blue-100 rounded-lg text-blue-600">
                            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <h3 class="text-base font-bold text-gray-900">Informations Personnelles</h3>
                    </div>
                    
                    <div class="p-0">
                        <dl class="divide-y divide-slate-100">
                            <div class="px-6 py-4 grid grid-cols-1 sm:grid-cols-3 gap-4 hover:bg-slate-50/50 transition">
                                <dt class="text-sm font-bold text-slate-500 uppercase tracking-wide mt-1">ID Utilisateur</dt>
                                <dd class="text-sm text-gray-900 sm:col-span-2 font-mono bg-slate-100 inline-block px-2 py-1 rounded w-fit">#{{ user.id }}</dd>
                            </div>

                            <div class="px-6 py-4 grid grid-cols-1 sm:grid-cols-3 gap-4 hover:bg-slate-50/50 transition">
                                <dt class="text-sm font-bold text-slate-500 uppercase tracking-wide mt-1">Nom Complet</dt>
                                <dd class="text-sm text-gray-900 sm:col-span-2 font-medium">{{ user.firstName }} {{ user.lastName }}</dd>
                            </div>

                            <div class="px-6 py-4 grid grid-cols-1 sm:grid-cols-3 gap-4 hover:bg-slate-50/50 transition">
                                <dt class="text-sm font-bold text-slate-500 uppercase tracking-wide mt-1">Email</dt>
                                <dd class="text-sm text-gray-900 sm:col-span-2">{{ user.email }}</dd>
                            </div>

                            <div class="px-6 py-4 grid grid-cols-1 sm:grid-cols-3 gap-4 hover:bg-slate-50/50 transition">
                                <dt class="text-sm font-bold text-slate-500 uppercase tracking-wide mt-1">Rôle</dt>
                                <dd class="text-sm sm:col-span-2">
                                    <span class="inline-flex items-center rounded-md px-2.5 py-1 text-xs font-bold ring-1 ring-inset
                                        {% if 'ROLE_ADMIN' in user.roles %} bg-red-50 text-red-700 ring-red-600/10
                                        {% elseif 'ROLE_TEACHER' in user.roles %} bg-amber-50 text-amber-700 ring-amber-600/10
                                        {% elseif 'ROLE_STUDENT' in user.roles %} bg-emerald-50 text-emerald-700 ring-emerald-600/10
                                        {% else %} bg-gray-50 text-gray-600 ring-gray-500/10 {% endif %}">
                                        {% if 'ROLE_ADMIN' in user.roles %} Administrateur
                                        {% elseif 'ROLE_TEACHER' in user.roles %} Enseignant
                                        {% elseif 'ROLE_STUDENT' in user.roles %} Étudiant
                                        {% else %} Utilisateur {% endif %}
                                    </span>
                                </dd>
                            </div>

                            {% if user.classe %}
                            <div class="px-6 py-4 grid grid-cols-1 sm:grid-cols-3 gap-4 hover:bg-slate-50/50 transition">
                                <dt class="text-sm font-bold text-slate-500 uppercase tracking-wide mt-1">Classe</dt>
                                <dd class="text-sm text-gray-900 sm:col-span-2 font-medium flex items-center gap-2">
                                    <svg class="w-4 h-4 text-slate-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10.496 2.132a1 1 0 00-.992 0l-7 4A1 1 0 003 8v7a1 1 0 100 2h14a1 1 0 100-2V8a1 1 0 00.496-1.868l-7-4zM6 9a1 1 0 00-1 1v3a1 1 0 102 0v-3a1 1 0 00-1-1zm3 1a1 1 0 012 0v3a1 1 0 11-2 0v-3zm5-1a1 1 0 00-1 1v3a1 1 0 102 0v-3a1 1 0 00-1-1z" clip-rule="evenodd" />
                                    </svg>
                                    {{ user.classe.name }}
                                </dd>
                            </div>
                            {% endif %}
                        </dl>
                    </div>
                </div>

                <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                        <div class="px-6 py-5 bg-slate-50 border-b border-slate-100 flex items-center gap-3">
                        <div class="p-2 bg-indigo-100 rounded-lg text-indigo-600">
                            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <h3 class="text-base font-bold text-gray-900">Sécurité du Compte</h3>
                    </div>
                    
                    <div class="p-6 relative">
                         <div class="absolute inset-0 z-10 flex items-center justify-center bg-white/50 backdrop-blur-[1px]">
                            <div class="bg-gray-100 px-4 py-2 rounded-lg shadow border border-gray-200">
                                <span class="text-sm font-medium text-gray-500 flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                                    Fonctionnalité bientôt disponible
                                </span>
                            </div>
                        </div>
                        <form id="passwordForm" class="space-y-5 max-w-lg opacity-40 pointer-events-none select-none filter blur-[1px]">
                            <div>
                                <label for="currentPassword" class="block text-sm font-bold text-slate-700 mb-1">Mot de passe actuel</label>
                                <input type="password" name="currentPassword" id="currentPassword" required 
                                        class="block w-full rounded-lg border border-slate-400 bg-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 px-3">
                            </div>
                           
                            <div>
                                <label for="newPassword" class="block text-sm font-bold text-slate-700 mb-1">Nouveau mot de passe</label>
                                <input type="password" name="newPassword" id="newPassword" required 
                                        class="block w-full rounded-lg border border-slate-400 bg-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 px-3">
                            </div>
                            <div>
                                <label for="confirmPassword" class="block text-sm font-bold text-slate-700 mb-1">Confirmer</label>
                                <input type="password" name="confirmPassword" id="confirmPassword" required 
                                        class="block w-full rounded-lg border border-slate-400 bg-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 px-3">
                            </div>
                        

                            <div id="errorMessage" class="hidden rounded-lg bg-red-50 p-4 border border-red-100">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h3 class="text-sm font-medium text-red-800" id="errorText">Error</h3>
                                    </div>
                                </div>
                            </div>

                            <div id="successMessage" class="hidden rounded-lg bg-green-50 p-4 border border-green-100">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                            </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h3 class="text-sm font-medium text-green-800" id="successText">Success</h3>
                                    </div>
                                </div>
                            </div>

                            <div class="pt-2">
                                <button type="submit" disabled class="w-full md:w-auto rounded-lg bg-indigo-600 px-6 py-2.5 text-sm font-bold text-white shadow-sm hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all cursor-not-allowed">
                                    Mettre à jour le mot de passe
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    {# 3. This closes the divs opened in sidebar.html.twig #}
    {% include 'components/sidebar_close.html.twig' %}
{% endblock %}